<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <TextView
            android:text="--:--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/clockTv" android:textColor="@android:color/white"
            android:textSize="36dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/viewPager"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/appList" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v4.view.ViewPager>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="20dp" android:id="@+id/appList" android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/clockTv"/>

    <TextView
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dayTextView"
            android:textColor="@android:color/white" app:layout_constraintStart_toEndOf="@+id/clockTv"
            android:layout_marginStart="8dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="1 January"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView" app:layout_constraintStart_toStartOf="@+id/dayTextView"
            app:layout_constraintTop_toBottomOf="@+id/dayTextView" android:textColor="@android:color/white"
            android:layout_marginTop="4dp"/>

    <android.support.design.widget.TabLayout android:layout_width="wrap_content"
                                             android:layout_height="0dp"
                                             app:tabBackground="@drawable/tab_selector"
                                             app:tabIndicatorColor="@android:color/transparent"
                                             app:layout_constraintEnd_toEndOf="parent"
                                             app:layout_constraintStart_toStartOf="parent"
                                             android:layout_marginStart="8dp"
                                             app:layout_constraintBottom_toBottomOf="parent"
                                             app:layout_constraintTop_toBottomOf="@+id/viewPager"
                                             android:id="@+id/tabDot"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/dayTextView" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/dateTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:gravity="right" app:layout_constraintHorizontal_bias="1.0">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/app_item_background"
                app:srcCompat="@drawable/ic_search" android:id="@+id/searchButton"
                android:layout_weight="1"
                android:padding="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_app" android:id="@+id/allAppButton"
                android:layout_weight="1"
                android:background="@drawable/app_item_background"
                android:padding="10dp"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>